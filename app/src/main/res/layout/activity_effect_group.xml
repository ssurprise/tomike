<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/view_padding_15"
    android:showDividers="middle"
    tools:context="com.skx.tomike.activity.xzdz.EffectGroupActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:onClick="onScrollChangeTitle"
            android:text="详情页动效"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:onClick="onScrollZoomImage2"
            android:text="预订页动效2"
            android:textSize="14sp" />


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:onClick="onScrollZoomImage3"
            android:text="预订页动效3"
            android:textSize="14sp" />

    </GridLayout>
</LinearLayout>