<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/view_padding_15"
    android:paddingTop="5dp"
    android:paddingEnd="@dimen/view_padding_15"
    android:paddingBottom="10dp"
    tools:ignore="ContentDescription">

    <ImageView
        android:id="@+id/iv_appStatsInfo_icon"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_appStatsInfo_appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/skx_212121"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/iv_appStatsInfo_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Tomike" />

    <TextView
        android:id="@+id/tv_appStatsInfo_pkgName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:textColor="@color/skx_212121"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tv_appStatsInfo_appName"
        app:layout_constraintTop_toBottomOf="@id/tv_appStatsInfo_appName"
        tools:text="com." />

    <TextView
        android:id="@+id/tv_appStatsInfo_versionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textColor="@color/skx_212121"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tv_appStatsInfo_appName"
        app:layout_constraintTop_toBottomOf="@id/tv_appStatsInfo_pkgName"
        tools:ignore="RelativeOverlap"
        tools:text="1.41.0" />

    <TextView
        android:id="@+id/tv_appStatsInfo_useStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/skx_212121"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_appStatsInfo_appName"
        tools:ignore="RelativeOverlap"
        tools:text="最近打开次数：4" />

</androidx.constraintlayout.widget.ConstraintLayout>
