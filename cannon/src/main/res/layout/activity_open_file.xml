<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".ui.activity.ImageLoadActivity">

    <TextView
        android:id="@+id/tv_openFile_target_path_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android 4.4（API 级别 19）引入了存储访问框架 (SAF)。借助 SAF，用户可轻松在其所有首选文档存储提供程序中浏览并打开文档、图像及其他文件。用户可通过易用的标准界面，以统一方式在所有应用和提供程序中浏览文件，以及访问最近使用的文件。"
        android:textColor="@color/skx_212121"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_openFile_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_openFile_target_path_desc"
        android:layout_marginTop="30dp"
        android:textColor="@color/skx_212121"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_openFile_targetPath_openBtn"
        style="@style/TextBtnStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_openFile_path"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:text="打开系统目录"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_openFile_targetPath_openBtn2"
        style="@style/TextBtnStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_openFile_targetPath_openBtn"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@id/tv_openFile_targetPath_openBtn"
        android:padding="20dp"
        android:text="打开系统目录2"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_openFile_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_openFile_targetPath_openBtn"
        android:layout_marginTop="30dp"
        android:text="其他"
        android:textColor="@color/skx_212121"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_openFile_image"
        style="@style/TextBtnStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_openFile_other"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:text="打开图片文件夹"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_openFile_video"
        style="@style/TextBtnStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_openFile_image"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:text="打开视频文件夹"
        tools:ignore="HardcodedText" />

</RelativeLayout>
