<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context="com.skx.tomike.cannon.ui.activity.FragmentPracticeActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_logcat_show"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/tv_fgmt_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/tv_fgmt_add"
        style="@style/TextBtnStyle"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="124dp"
        android:layout_marginRight="12dp"
        android:text="add"
        android:textColor="@color/skx_212121"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_fgmt_replace"
        style="@style/TextBtnStyle"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="replace"
        android:textColor="@color/skx_212121"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_fgmt_add"
        app:layout_constraintTop_toBottomOf="@id/tv_fgmt_add"
        app:layout_constraintVertical_bias="0.129"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_fgmt_back"
        style="@style/TextBtnStyle"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="back"
        android:textColor="@color/skx_212121"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_fgmt_replace"
        app:layout_constraintTop_toBottomOf="@id/tv_fgmt_replace"
        app:layout_constraintVertical_bias="0.129"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>