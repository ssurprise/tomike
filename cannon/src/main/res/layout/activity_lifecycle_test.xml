<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="@dimen/view_padding_15"
    tools:context="com.skx.tomike.cannon.ui.activity.LifecycleActivity">

    <TextView
        android:id="@+id/tv_lifecycle_content"
        style="@style/LogcatTextStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="100dp"
        android:padding="10dp"
        tools:text="aaaa" />

    <Button
        android:id="@+id/btn_lifecycle_showDialog"
        style="@style/TextBtnStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="弹出Dialog"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_lifecycle_openTransparentActivity"
        style="@style/TextBtnStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_lifecycle_showDialog"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:text="跳转透明\nActivity"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_lifecycle_openNewActivity"
        style="@style/TextBtnStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_lifecycle_openTransparentActivity"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:text="跳转Activity"
        tools:ignore="HardcodedText" />

</RelativeLayout>
