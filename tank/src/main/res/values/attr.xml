<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ViewPagerIndicator">
        <attr name="color2" format="color" />
    </declare-styleable>

    <declare-styleable name="PageHeaderLayout">
        <attr name="headerText" format="string" />
        <attr name="headerTextSize" format="float" />
        <attr name="headerTextColor" format="color" />
        <attr name="operateText" format="string" />
        <attr name="operateTextSize" format="float" />
        <attr name="operateTextColor" format="color" />
        <attr name="backBtnSrc" format="reference" />
    </declare-styleable>

    <declare-styleable name="ShapeView">
        <attr name="shape" format="enum">
            <enum name="rectangle" value="0" />
            <enum name="triangle" value="1" />
            <enum name="circle" value="2" />
            <enum name="oval" value="3" />
            <enum name="arc" value="4" />
        </attr>
        <attr name="solid_color" format="color|reference" />
        <attr name="stroke_color" format="color|reference" />
        <attr name="stroke_width" format="dimension" />
        <attr name="radius" format="dimension" />
        <attr name="arc_startAngle" format="float" />
        <attr name="arc_sweepAngle" format="float" />
    </declare-styleable>

    <declare-styleable name="FlowLayout">
        <attr name="maxLines" format="integer" />
        <attr name="rowSpacing" format="dimension" />
        <attr name="columnSpacing" format="dimension" />
    </declare-styleable>
</resources>