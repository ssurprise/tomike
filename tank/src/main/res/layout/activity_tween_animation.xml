<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/view_padding_15"
    tools:context=".animation.activity.TweenAnimationActivity">

    <ImageView
        android:id="@+id/iv_tweenAnimation_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/icon_result_favorite_selected"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/btn_tweenAnimation_translate"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/tank_btn_selector_bg"
        android:gravity="center"
        android:text="平移动画"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_tweenAnimation_scale"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/btn_tweenAnimation_scale"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/tank_btn_selector_bg"
        android:gravity="center"
        android:text="缩放动画"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/btn_tweenAnimation_translate"
        app:layout_constraintRight_toLeftOf="@id/btn_tweenAnimation_rotate"
        app:layout_constraintTop_toTopOf="@id/btn_tweenAnimation_translate"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/btn_tweenAnimation_rotate"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/tank_btn_selector_bg"
        android:gravity="center"
        android:text="旋转动画"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/btn_tweenAnimation_scale"
        app:layout_constraintRight_toLeftOf="@id/btn_tweenAnimation_alpha"
        app:layout_constraintTop_toTopOf="@id/btn_tweenAnimation_translate"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/btn_tweenAnimation_alpha"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/tank_btn_selector_bg"
        android:gravity="center"
        android:text="淡入淡出动画"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/btn_tweenAnimation_rotate"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_tweenAnimation_translate"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/btn_tweenAnimation_set"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/tank_btn_selector_bg"
        android:gravity="center"
        android:text="组合拳"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_tweenAnimation_translate"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>
