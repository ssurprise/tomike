<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/view_padding_15"
    android:paddingTop="@dimen/view_padding_15"
    android:paddingRight="@dimen/view_padding_15"
    android:paddingBottom="@dimen/view_padding_15"
    tools:context="com.skx.tomike.tank.animation.activity.ShareElementActivity">

    <ImageView
        android:id="@+id/iv_shareElement_imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/image_04"
        android:transitionName="0"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/iv_shareElement_imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/image_04"
        android:transitionName="2"
        tools:ignore="ContentDescription" />


    <ImageView
        android:id="@+id/iv_shareElement_imageView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/iv_shareElement_imageView"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/image_04"
        android:transitionName="3"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/iv_shareElement_imageView4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/iv_shareElement_imageView2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/image_04"
        android:transitionName="4"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_shareElement_defView"
        style="@style/TextBtnStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_shareElement_imageView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:text="测试不同的View 类型是否可以实现"
        tools:ignore="HardcodedText" />

</RelativeLayout>
