<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/view_padding_15"
    tools:context=".widget.activity.LightDarkTextActivity">

    <LinearLayout
        android:id="@+id/lightDarkText_input_master"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/lightDarkText_input"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:lines="1"
            android:maxLength="1"
            android:nextFocusForward="@id/lightDarkText_input1" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/lightDarkText_input1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:lines="1"
            android:maxLength="1"
            android:nextFocusForward="@id/lightDarkText_input2" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/lightDarkText_input2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:lines="1"
            android:maxLength="1"
            android:nextFocusForward="@id/lightDarkText_input3"
            android:privateImeOptions="" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/lightDarkText_input3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:lines="1"
            android:maxLength="1" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lightDarkText_switch"
        style="@style/TextBtnStyle"
        android:layout_width="match_parent"
        android:layout_below="@id/lightDarkText_input_master"
        android:text="" />

</RelativeLayout>
