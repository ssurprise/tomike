    <TextView
        android:id="@+id/tv_marquee_option"
        style="@style/LogcatTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_marquee_value_self2"
        android:layout_marginTop="40dp"
        android:padding="5dp"
        android:text="点击以下内容可切换文案"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_marquee_text_1"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@id/tv_marquee_option"
        android:layout_marginTop="20dp"
        android:gravity="start|center_vertical"
        android:text="填不满TextView宽度"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="14sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_marquee_text_2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_marquee_text_1"
        android:layout_marginTop="20dp"
        android:gravity="start|center_vertical"
        android:text="超过宽度 - 文案不够长怎么办？背一首诗吧：白发渔樵江渚上，惯看秋月春风..."
        android:textColor="@android:color/holo_orange_light"
        android:textSize="14sp"
        tools:ignore="HardcodedText" />

</RelativeLayout>
