<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".widget.activity.ShapeViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.skx.tomike.tank.widget.view.ShapeView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@color/skx_000000_15"
            app:radius="70dp"
            app:shape="circle"
            app:solid_color="@color/skx_ff4081" />

        <com.skx.tomike.tank.widget.view.ShapeView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@color/skx_000000_15"
            android:paddingEnd="40dp"
            app:radius="170dp"
            app:shape="circle"
            app:solid_color="@color/skx_ff4081"
            app:stroke_color="@color/skx_2cb298"
            app:stroke_width="3dp"
            tools:ignore="RtlSymmetry" />

        <com.skx.tomike.tank.widget.view.ShapeView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@color/skx_000000_15"
            android:paddingEnd="40dp"
            android:paddingRight="40dp"
            app:arc_startAngle="90"
            app:arc_sweepAngle="90"
            app:shape="arc"
            app:solid_color="@color/skx_ff4081"
            app:stroke_color="@color/skx_2cb298"
            app:stroke_width="3dp"
            tools:ignore="RtlSymmetry" />

        <com.skx.tomike.tank.widget.view.ShapeView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@color/skx_000000_15"
            android:paddingEnd="40dp"
            android:paddingRight="40dp"
            app:arc_startAngle="-90"
            app:arc_sweepAngle="90"
            app:shape="arc"
            app:solid_color="@color/skx_ff4081"
            app:stroke_color="@color/skx_2cb298"
            app:stroke_width="3dp"
            tools:ignore="RtlSymmetry" />

        <com.skx.tomike.tank.widget.view.ShapeView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@color/skx_000000_15"
            android:padding="15dp"
            app:shape="oval"
            app:solid_color="@color/skx_ff4081"
            app:stroke_color="@color/skx_26a69a"
            app:stroke_width="3dp" />

        <com.skx.tomike.tank.widget.view.ShapeView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@color/skx_000000_15"
            app:shape="oval"
            app:solid_color="@color/skx_ff4081"
            app:stroke_color="@color/skx_26a69a"
            app:stroke_width="3dp" />

        <com.skx.tomike.tank.widget.view.ShapeView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@color/skx_000000_15"
            android:padding="10dp"
            app:radius="10dp"
            app:shape="rectangle"
            app:solid_color="@color/skx_ff4081" />

        <com.skx.tomike.tank.widget.view.ShapeView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@color/skx_000000_15"
            android:padding="10dp"
            app:radius="30dp"
            app:shape="rectangle"
            app:solid_color="@color/skx_ff4081"
            app:stroke_color="@color/skx_26a69a"
            app:stroke_width="3dp" />

        <com.skx.tomike.tank.widget.view.ShapeView
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="@color/skx_000000_15"
            android:padding="10dp"
            app:radius="100dp"
            app:shape="rectangle"
            app:solid_color="@color/skx_ff4081"
            app:stroke_color="@color/skx_26a69a"
            app:stroke_width="3dp" />

        <com.skx.tomike.tank.widget.view.ShapeView
            android:layout_width="30dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:background="@color/skx_000000_15"
            android:padding="10dp"
            app:radius="100dp"
            app:shape="rectangle"
            app:solid_color="@color/skx_ff4081"
            app:stroke_color="@color/skx_26a69a"
            app:stroke_width="3dp" />

        <com.skx.tomike.tank.widget.view.ShapeView
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@color/skx_000000_15"
            app:shape="rectangle"
            app:solid_color="@color/skx_26a69a"
            app:stroke_color="@color/skx_ff4081"
            app:stroke_width="3dp" />

        <View
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_oval_ffffff" />

        <Space
            android:layout_width="0dp"
            android:layout_height="20dp" />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>
