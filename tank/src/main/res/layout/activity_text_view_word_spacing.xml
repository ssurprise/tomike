<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:paddingTop="20dp"
    tools:context=".widget.activity.TextWordSpaceActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="原型:"
        android:textColor="@color/skx_212121"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_textSpacing_standard"
        style="@style/LogcatTextStyle"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="对比:"
        android:textColor="@color/skx_212121"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_textSpacing_mutable"
        style="@style/LogcatTextStyle"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/tv_textSpacing_mutable_factor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="字间距：0"
        android:textColor="@color/skx_ff4081"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />

    <SeekBar
        android:id="@+id/sb_textSpacing_mutable_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:max="10" />

    <TextView
        android:id="@+id/tv_lineSpacing_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="行间距"
        android:textColor="@color/skx_ff4081"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_lineSpacing_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="行间距可使用 android:lineSpacingExtra 属性或者 android:lineSpacingMultiplier 属性进行设置"
        android:textColor="@color/skx_212121"
        android:textSize="12sp"
        tools:ignore="HardcodedText" />

</LinearLayout>
