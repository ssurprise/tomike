<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:paddingTop="20dp"
    tools:context=".widget.activity.TextWordSpacingActivity">

    <TextView
        android:id="@+id/tv_textSpacing_standard"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:textSize="16sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/tv_textSpacing_mutable"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textSize="16sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/tv_textSpacing_mutable_factor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/skx_ff4081"
        android:textSize="16sp" />

    <SeekBar
        android:id="@+id/sb_textSpacing_mutable_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:max="10" />

</LinearLayout>
