<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".widget.activity.NestedScrollViewViewPagerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image_02" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/nestedScrollView_tab"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:tabBackground="@android:color/transparent"
            app:tabIndicatorColor="@color/skx_323232"
            app:tabMode="scrollable"
            app:tabPadding="0dp"
            app:tabSelectedTextColor="@color/skx_ff4081"
            app:tabTextColor="@color/skx_878787">

        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/nestedScrollView_vpContent"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="@android:color/white"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
